#coversor celsius em fahrenheit ou vice versa
print("Digite 1 para converter Celsius para Fahrenheit ou 2 para converter Fahrenheit para Celsius")
opcao = int(input("Opção: "))
if opcao == 1:
    celsius = float(input("Digite a temperatura em Celsius: "))
    fahrenheit = (celsius * 9/5) + 32
    if fahrenheit.is_integer():
        fahrenheit = int(fahrenheit)
    print(f"{celsius}°C é igual a {fahrenheit}°F")
elif opcao == 2:
    fahrenheit = float(input("Digite a temperatura em Fahrenheit: "))
    celsius = (fahrenheit - 32) * 5/9
    print(f"{fahrenheit}°F é igual a {celsius}°C")
else:
    print("Opção inválida. Por favor, escolha 1 ou 2.")
     
